{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module System for ESM */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",

    /* Type Definitions */
    "types": ["node"],
    "lib": ["ES2020"],

    /* Output Options */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Type Checking */
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Syntax */
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    /* Other */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
